{
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        }
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "ignore": [
            "firebase.json",
            "firebase-debug.log",
            "**/.*",
            "**/node_modules/**",
            "components/**",
            "hooks/**",
            "pages/**",
            "public/**",
            "styles/**",
            "types/**",
            "utilities/**",
            "firestore.rules",
            "README.md"
        ],
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"],
        "source": "."
    },
    "hosting": {
        "cleanUrls": true,
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "public": "public",
        "rewrites": [{ "source": "**", "function": "nextjs-server" }]
    },
    "storage": {
        "rules": "storage.rules"
    }
}
